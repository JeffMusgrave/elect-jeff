---
import "@fontsource/montserrat/700.css";
import "@fontsource/playfair-display/400-italic.css";
export interface Props {
  heading: string;
  subheading: string;
}

const { heading, subheading } = Astro.props as Props;
---

<div class="whitespace-nowrap mt-8 pb-6">
  <h1 class="text-4xl sm:text-5xl lg:text-7xl text-[#EE3900] tracking-tighter">
    {heading}
  </h1>
  <h2 class="text-2xl sm:text-3xl lg:text-4xl italic text-[#5B5B5B]">
    {subheading}
  </h2>
</div>

<style>
  h1 {
    font-family: "Montserrat", sans-serif;
  }
  h2 {
    font-family: "Playfair Display", serif;
  }
</style>
